<div class="container">
    <div class="row">
        <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
    <h2>User info</h2>
    
    <div class="error_explanation">
<% if @user.errors.any? %>
  <h3><%= @user.errors.count %>errors prohibited this obj from being saved:</h3>
  <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
</div>
    
    <%= form_with model: @user do |f| %>
      <div class="form-group">
        <label for="user_name">Name</label>
       <div class="form_control name">
        <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"name"%>
       </div>
      </div>
     <div class="form-group">
        <label for="user_image">Image</label>
        <div class="form-control-file user-image">
       <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>
      </div>
     </div>
      <div class="form-group">
          <label for="user_introduction">Introduction</label>
          <div class="form_control introduction">
              <%= f.text_field :self_introduction %>
          </div>
      </div>  
     
     
     
     
     <%= f.submit 'Update User', class: "btn btn-secondary" %>
  </div>
    </div>
</div>
<% end %>